<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Cloth Marketing Application</title>

    <link href="~/favion.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width"/>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/jquery/jquery-2.1.4.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    
</head>
<body>
    <header>
        <br />
            <div class="float-left">
                <img src="~/Images/cloth.png" />
               
                <section style="float : right">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>

                <nav>
                    <br />
                    <div class="btn-group btn-group-justified">
                        <div class="btn btn-warning">@Html.ActionLink("Home", "Index", "Home")</div>
                        <div class="btn btn-warning">@Html.ActionLink("Contact", "Contact", "Home")</div>
                        <div class="btn btn-warning">@Html.ActionLink("About", "About", "Home")</div>
                    </div>
                </nav>
            

    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div>
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Cloth Marketing Application </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
